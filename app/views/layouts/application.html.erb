<!DOCTYPE html>
<html>
	<head>
	  <title>Forum</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div id="header">
			<h1>
				Forum
			</h1>
		</div>
		<div id="container">
			<div id="colone">
				<% if current_user %>
					<div id="navbar">
						<ul id="nav">
							<li>
								<%= link_to "Home", entry_path %>
							</li>
							<li>
								<%= link_to "Topics", topics_path %>
							</li>
							<li>
								<%= link_to "Users", users_path %>
							</li>
							<li>
								<%= link_to "Me", user_path(current_user.id) %>
							</li>
							<li>
								<%= link_to "Logout", logout_path, method: :delete %>
							</li>
						</ul>
					</div>
				<% end %>
			</div>
			<div id="coltwo">
				<% if flash[:notice] %>
					<%= flash[:notice] %>
				<% end %>
				<% if flash[:alert] %>
					<%= flash[:alert] %>
				<% end %>

				<%= yield %>
			</div>
		</div>
	</body>
</html>
